          //-     li
          //-       a(href='#')
          //-         i.fa.fa-vimeo
      //- Footer Bottom
      .footer-bottom
        .container
          .copyright
            p &copy; 2018 #{title}. All Rights Reserved.
    //- Footer End
    //- start scrollUp
    #scrollUp
      i.fa.fa-angle-up
    //- Search Modal Start
    .modal.fade.search-modal(aria-hidden='true', role='dialog', tabindex='-1')
      button.close(type='button', data-dismiss='modal', aria-label='Close')
        span.fa.fa-close(aria-hidden='true')
      .modal-dialog.modal-dialog-centered
        .modal-content
          .search-block.clearfix
            form
              .form-group
                input.form-control(placeholder='eg: Computer Technology', type='text')
