extends ./_layout.pug

append css

block content
    div.container.login
        div.login-box
            button#login-google
                i.fa.fa-google
                span Google
            button#login-facebook
                i.fa.fa-facebook
                span Facebook
            button#login-twitter
                i.fa.fa-twitter
                span Twitter
            hr
            form.email-container
                hidden(name="_csrf")
                label Email:
                br
                input(type='email', placeholder='you@example.org',name="username")#login-email
                label Password:
                br
                input(type='password', placeholder='******',name="password")#login-password



